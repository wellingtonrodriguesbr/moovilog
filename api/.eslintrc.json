{
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "semi": true,
        "bracketSpacing": true,
        "trailingComma": "es5",
        "printWidth": 120
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.js", "**/*.ts"],
      "rules": {}
    }
  ]
}

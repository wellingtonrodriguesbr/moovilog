{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@/components/*": [
        "./src/components/*",
      ],
      "@/pages/*": [
        "./src/pages/*",
      ],
      "@/interfaces/*": [
        "./src/interfaces/*",
      ],
      "@/lib/*": [
        "./src/lib/*",
      ],
      "@/hooks/*": [
        "./src/hooks/*",
      ],
      "@/providers/*": [
        "./src/providers/*",
      ],
      "@/stores/*": [
        "./src/stores/*",
      ],
      "@/utils/*": [
        "./src/utils/*",
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
